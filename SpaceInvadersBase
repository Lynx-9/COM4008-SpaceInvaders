def draw_invaders(): 
    for col in range(invader_startcol, invader_endcol, 30): # intervals of 30 
        for row in range(invader1_startrow, invader1_endrow, 30): #switched the rows and columns around to allow different stuff
            inv_obj1 = Squid(col, row, pygame.image.load("invader1.png"), 30, 30)
            invaders.append(inv_obj1)
        for row in range(invader2_startrow, invader2_endrow, 30): 
            inv_obj2 = Crab(col, row, pygame.image.load("invader2.png"), 30, 30) #brute force use of different invader types
            invaders.append(inv_obj2)
        for row in range(invader3_startrow, invader3_endrow, 30): 
            inv_obj3 = Octopus(col, row, pygame.image.load("invader3.png"), 30, 30)
            invaders.append(inv_obj3) 
            #screen.blit(inv_obj.img, (col, row)) #having this instead of invaders.append causes the bullet to pass through them but no 'turnip heads'
    #print(len(invaders)) #array is constantly making new invaders, stop it *fixed now I believe

def move_invaders():
    global move_right
    moveright = 2 if move_right else -2 #if move_right is True then it goes +2 if its false then -2
    edge_hit = False
    for invader in invaders: #invader movement for side to side
        invader.x += moveright
        invader.update()
        if invader.x + invader.l > SCREEN_WIDTH or invader.x < 0: #check if invader hit the side of the screen
            edge_hit = True
    if edge_hit: #kinda self explanatory
        for invader in invaders:
            invader.y += 20
            invader.update()
        edge_hit == False
        move_right = not move_right #makes it the opposite of what it is currently
pygame.key.set_repeat(True) #this keeps the key being pressed when holding it down. lower the player.x greatly otherwise they simply fly off the screen

draw_invaders() #put infront of while statement, it was constantly creating new invaders
running = True
while running: 
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
            pygame.display.quit()
            pygame.quit()
            sys.exit()
        elif event.type == pygame.KEYDOWN:
            if event.key == pygame.K_LEFT:
                player.x -= 0.3
            elif event.key == pygame.K_RIGHT:
                player.x += 0.3
            elif event.key == pygame.K_SPACE:
                fired = True
                collide = False
                bullet.x = player.x + 15
                bullet.y = player.y
            elif event.key == pygame.K_ESCAPE or event.key == pygame.WINDOWCLOSE: # TO QUIT
                running = False
                #pygame.display.quit()
                #pygame.QUIT()
                #sys.exit()
    screen.fill([0,0,0]) # black background

    move_invaders()
    for invader in invaders:
        invader.invader_bomb()
    
    screen.blit(player.img, (player.x, player_y))
    
    if invaders != None: 
        for index in range(len(invaders)):
            screen.blit(invaders[index].img, (invaders[index].x, invaders[index].y))
    #invader.update()   #idk where this came from, seems unnecassary but am keeping just in case
    
    if fired == True:
        pygame.draw.rect(screen, [0,255,0], bullet.rect)
        bullet.y -= bullet.speed
        bullet.update()
        if bullet.y < 0:
            fired = False # for reset

    for bomb in bombs[:]: #bombs being dropped on players grabs all bombs from bomb list
        bomb.y += bomb.speed
        bomb.update()
        pygame.draw.rect(screen, [0, 0, 255], bomb.rect) #change colour of bomb e.g 255,0,0 is red
        if bomb.y > SCREEN_HEIGHT: #remove off screen when stuff is hit
            bombs.remove(bomb)
        if bomb.rect.colliderect(player.rect): #add whatever code is needed for getting hit later
            bombs.remove(bomb)
    
    for invader in invaders:
        if bullet.rect.colliderect(invader.rect) and collide == False:
            invaders.remove(invader)
            collide = True
            bullet.x = -10
            bullet.y = -10
    pygame.display.flip()
    
    clock.tick(FPS)
    
sys.exit(0)
