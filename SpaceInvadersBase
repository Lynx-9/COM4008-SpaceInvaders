import pygame 
import sys
import random
from player import Player
from Barriers import Block, Barrier1, Barrier2, Barrier3 #Georginas code
pygame.init()

barrier1 = Barrier1(450,500) #code to make Georginas barrier code show up
barrier2 = Barrier2(250,500)
barrier3 = Barrier3(50,500)

SCREEN_HEIGHT = 600 #changed these from 500 to 600 so as to align with jacks code
SCREEN_WIDTH = 600

screen = pygame.display.set_mode([SCREEN_HEIGHT,SCREEN_WIDTH])

clock = pygame.time.Clock() # to slow down the speed of movement
FPS = 15 # to slow down the speed of movement

player_x = 250
player_y = 450
player_img = pygame.image.load("defender.png") #load in the image
player_img = pygame.transform.scale(player_img, (35, 30)) # change the scale

invader1_startrow = 120
invader1_endrow = 140 #change around these rows to fit better if needed
invader2_startrow = 150
invader2_endrow = 200
invader3_startrow = 210
invader3_endrow = 250 #brute force but it works
invader_startcol = 80
invader_endcol = 410 #edited these columns a bit to have eleven invaders and be roughly in the middle

#boolean for direction
move_right = True

class Bomb: #bomb stuff
    def __init__(self, x, y, w, h, s):
        self.x = x
        self.y = y
        #self.img = img
        self.width = w
        self.height = h
        #self.img = pygame.transform.scale(img, (w, h))
        self.speed = s
        self.rect = pygame.Rect(self.x, self.y, self.width, self.height)
        #pygame.Rect()

    def update(self):
        self.rect = pygame.Rect(self.x, self.y, self.width, self.height)

class Invader:
    def __init__(self, x, y, img, l, h, score = 0):
        self.x = x
        self.y = y
        self.img = img
        self.l = l
        self.h = h
        self.img = pygame.transform.scale(img, (l, h))
        self.score = score
        self.rect = pygame.Rect(self.x, self.y, self.l, self.h)
    def invader_bomb(self):
        bomb = random.randint(0,100000) #randomly generate a number constantly, if it is high enough then bombs away
        if bomb > 99950: #may need a higher number still quite a few bombs being shot - change this to 99050 to get more constant bombing for barrier testing
            bomb = Bomb(self.x + self.l//2, self.y + self.h, 10, 20, 5)
            bombs.append(bomb)
    def update(self):
        self.rect = pygame.Rect(self.x, self.y, self.l, self.h)

invaders = [] # ready for an array of invaders
#invaders.append(invader) #this was adding an invader unnecessarily and making the rows of invader not move

fired = False
collide = False

bombs = []

class Squid(Invader):
    def __init__(self, x, y, img, l, h):
        super().__init__(x, y, img, l, h, 30)

class Crab(Invader):
    def __init__(self, x, y, img, l, h):
        super().__init__(x, y, img, l, h, 20)

class Octopus(Invader):
    def __init__(self, x, y, img, l, h):
        super().__init__(x, y, img, l, h, 10)

def draw_invaders(): 
    for col in range(invader_startcol, invader_endcol, 30): # intervals of 30 
        for row in range(invader1_startrow, invader1_endrow, 30): #switched the rows and columns around to allow different stuff
            inv_obj1 = Squid(col, row, pygame.image.load("invader1.png"), 30, 30)
            invaders.append(inv_obj1)
        for row in range(invader2_startrow, invader2_endrow, 30): 
            inv_obj2 = Crab(col, row, pygame.image.load("invader2.png"), 30, 30) #brute force use of different invader types
            invaders.append(inv_obj2)
        for row in range(invader3_startrow, invader3_endrow, 30): 
            inv_obj3 = Octopus(col, row, pygame.image.load("invader3.png"), 30, 30)
            invaders.append(inv_obj3) 

invader_speed = 2 #global invader speed

def move_invaders():
    global move_right, invader_speed
    moveright = invader_speed if move_right else -invader_speed #if move_right is True then it adds invader speed
    edge_hit = False
    for invader in invaders: #invader movement for side to side
        invader.x += moveright
        invader.update()
        if invader.x + invader.l > SCREEN_WIDTH or invader.x < 0: #check if invader hit the side of the screen
            edge_hit = True
    if edge_hit: #kinda self explanatory
        for invader in invaders:
            invader.y += 20
            invader.update()
        edge_hit == False
        move_right = not move_right #makes it the opposite of what it is currently

class Game: #added from the main.py file, attempts are being made to make it obsolete as it would be easier than me recreating all of the code to fit in there
    def __init__(self):
        player_sprite = Player((SCREEN_WIDTH / 2,SCREEN_HEIGHT),SCREEN_WIDTH,2)
        self.player = pygame.sprite.GroupSingle(player_sprite)

    def run(self):
        self.player.update()
        
        self.player.sprite.lasers.draw(screen)
        self.player.draw(screen)

game = Game()

draw_invaders() #put infront of while statement, it was constantly creating new invaders
running = True
while running: 
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
            pygame.display.quit()
            pygame.quit()
            sys.exit()
        elif event.type == pygame.KEYDOWN:
            if event.key == pygame.K_ESCAPE or event.key == pygame.WINDOWCLOSE: # TO QUIT
                running = False
    screen.fill([0,0,0]) # black background

    barrier1.blocks_group.draw(screen) #georginas code
    barrier2.blocks2_group.draw(screen)
    barrier3.blocks3_group.draw(screen)

    move_invaders()
    for invader in invaders:
        invader.invader_bomb()
    
    game.run()
    
    if invaders != None: 
        for index in range(len(invaders)):
            screen.blit(invaders[index].img, (invaders[index].x, invaders[index].y))

    for bomb in bombs[:]: #bombs being dropped on players grabs all bombs from bomb list
        bomb.y += bomb.speed
        bomb.update()
        pygame.draw.rect(screen, [0, 0, 255], bomb.rect) #change colour of bomb e.g 255,0,0 is red
        if bomb.y > SCREEN_HEIGHT: #remove off screen when stuff is hit
            bombs.remove(bomb)
        if bomb.rect.colliderect(game.player.sprite.rect): #add whatever code is needed for getting hit later
            bombs.remove(bomb) #add some code here for player lives, I have spent an embarassing amount of time on getting the code to work together
            print("Player hit, womp womp")
            
        for block in barrier1.blocks_group:
            if bomb.rect.colliderect(block.rect):
                #print("barrier hit")
                bombs.remove(bomb)
                barrier1.blocks_group.remove(block)
                break
        for block in barrier2.blocks2_group:
            if bomb.rect.colliderect(block.rect):
                #print("barrier hit")
                bombs.remove(bomb)
                barrier2.blocks2_group.remove(block)
                break
        for block in barrier3.blocks3_group:
            if bomb.rect.colliderect(block.rect):
                #print("barrier hit")
                bombs.remove(bomb)
                barrier3.blocks3_group.remove(block)
                break
    
    for laser in game.player.sprite.lasers: #fixed this finally, lasers code may need cooldown change but overall seems fine
        for invader in invaders:
            if laser.rect.colliderect(invader.rect) and collide == False:
                invaders.remove(invader)
                laser.kill()
                invader_speed += 0.1 #whenever an invader dies 0.1 is added to the speed
        for block in barrier1.blocks_group:
            if laser.rect.colliderect(block.rect):
                #print("barrier hit")
                laser.kill()
                barrier1.blocks_group.remove(block)
                break
        for block in barrier2.blocks2_group:
            if laser.rect.colliderect(block.rect):
                #print("barrier hit")
                laser.kill()
                barrier2.blocks2_group.remove(block)
                break
        for block in barrier3.blocks3_group:
            if laser.rect.colliderect(block.rect):
                #print("barrier hit")
                laser.kill()
                barrier3.blocks3_group.remove(block)
                break
    pygame.display.flip()
    
    clock.tick(FPS)
    
sys.exit(0)
