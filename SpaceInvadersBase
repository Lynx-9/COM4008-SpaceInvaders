import pygame 
import sys
import random
pygame.init()

SCREEN_HEIGHT = 500
SCREEN_WIDTH = 500

screen = pygame.display.set_mode([SCREEN_HEIGHT,SCREEN_WIDTH])

clock = pygame.time.Clock() # to slow down the speed of movement
FPS = 15 # to slow down the speed of movement

player_x = 250
player_y = 450
player_img = pygame.image.load("defender.png") #load in the image
player_img = pygame.transform.scale(player_img, (35, 30)) # change the scale

invader1_startrow = 120
invader1_endrow = 140 #change around these rows to fit better if needed
invader2_startrow = 150
invader2_endrow = 200
invader3_startrow = 210
invader3_endrow = 250 #brute force but it works
invader_startcol = 80
invader_endcol = 410 #edited these columns a bit to have eleven invaders and be roughly in the middle
#likely adding in separate start rows and columns to change where it starts at

#boolean for direction
move_right = True

invader_img = pygame.image.load("invader1.png")
invader_img = pygame.transform.scale(invader_img, (30, 30))#

class Player:
    def __init__(self, x, y, img, l, h):
        self.x = x
        self.y = y
        self.img = img
        self.l = l
        self.h = h 
        self.img = pygame.transform.scale(img, (l, h))
        self.rect = pygame.Rect(self.x, self.y, self.l, self.h)
    def update(self):
        self.rect = pygame.Rect(self.x, self.y, self.l, self.h)

player = Player((SCREEN_WIDTH/2)-(35/2), (SCREEN_HEIGHT - 100), pygame.image.load("defender.png"), 35, 30)

class Bomb: #bomb stuff
    def __init__(self, x, y, w, h, s):
        self.x = x
        self.y = y
        #self.img = img
        self.width = w
        self.height = h
        #self.img = pygame.transform.scale(img, (w, h))
        self.speed = s
        self.rect = pygame.Rect(self.x, self.y, self.width, self.height)
        #pygame.Rect()

    def update(self):
        self.rect = pygame.Rect(self.x, self.y, self.width, self.height)

class Invader:
    def __init__(self, x, y, img, l, h, score = 0):
        self.x = x
        self.y = y
        self.img = img
        self.l = l
        self.h = h
        self.img = pygame.transform.scale(img, (l, h))
        self.score = score
        self.rect = pygame.Rect(self.x, self.y, self.l, self.h)
    def invader_bomb(self):
        bomb = random.randint(0,100000) #randomly generate a number constantly, if it is high enough then bombs away
        if bomb > 99950: #may need a higher number still quite a few bombs being shot
            bomb = Bomb(self.x + self.l//2, self.y + self.h, 10, 20, 5)
            bombs.append(bomb)
    def update(self):
        self.rect = pygame.Rect(self.x, self.y, self.l, self.h)

class Bullet:
    def __init__(self, x, y, w, h, s):
        self.x = x
        self.y = y
        #self.img = img
        self.width = w
        self.height = h
        #self.img = pygame.transform.scale(img, (w, h))
        self.speed = s
        self.rect = pygame.Rect(self.x, self.y, self.width, self.height)
        #pygame.Rect()

    def update(self):
        self.rect = pygame.Rect(self.x, self.y, self.width, self.height)

invader = Invader(250, 100, pygame.image.load("invader1.png"), 30, 30)
invaders = [] # ready for an array of invaders
#invaders.append(invader) #this was adding an invader unnecessarily and making the rows of invader not move

move_right = True
fired = False
collide = False

bullet = Bullet(player.x, player.y, 10, 20, 10)
bullets = []
bombs = []

class Squid(Invader):
    def __init__(self, x, y, img, l, h):
        super().__init__(x, y, img, l, h, 30) #the 30 = the points given

class Crab(Invader):
    def __init__(self, x, y, img, l, h):
        super().__init__(x, y, img, l, h, 20) #=20 points

class Octopus(Invader):
    def __init__(self, x, y, img, l, h):
        super().__init__(x, y, img, l, h, 10)

"""Squid(20, 20, pygame.image.load("invader1.png"), 30, 30)
Crab(20, 20, pygame.image.load("invader2.png"), 30, 30)
Octopus(20, 20, pygame.image.load("invader3.png"), 30, 30)

squid_obj = Squid(20, 20, pygame.image.load("invader1.png"), 30, 30)
print(type(squid_obj))
print(squid_obj.__class__)
